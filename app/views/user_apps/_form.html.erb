


<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Sign Up Form</title>
    <%=stylesheet_link_tag 'application' %>
  <%=stylesheet_link_tag 'user_app' %>
</head>

<body>

 
<div class="container">
<p id="notice"><%= notice %></p>
<%= form_with(model: user_app, local: true) do |form| %>
      <% if user_app.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user_app.errors.count, "error") %> prohibited this user_app from being saved:</h2>

            <ul>
            <% user_app.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <div class="row">
      <h4>Basic Info</h4>
      
      <div class="input-group input-group-icon">   
             <%= form.text_field :name, id: :user_app_name , placeholder: "username" ,validate: { presence: true, uniqueness: false }%>
        <div class="input-icon"><i class="fa fa-user"></i></div>
      </div>

      <div class="input-group input-group-icon">
            <%= form.text_field :email, id: :user_app_email, placeholder: "email"%>
          <div class="input-icon"><i class="fa fa-globe"></i></div>
        </div>

        <%= form.label :password %>
        <div class="input-group input-group-icon">      
              <%= form.password_field :password %>
          <div class="input-icon"><i class="fa fa-comments-o"></i></div>
        </div>

        <%= form.label :password_confirmation %>
        <div class="input-group input-group-icon">    
             <%= form.password_field :password_confirmation %>
          <div class="input-icon"><i class="fa fa-comments-o"></i></div>
        </div>

   <div class="input-group">
    <%= form.label :ppic, 'Profile Pricture' %>
    <%= form.file_field :ppic, multiple: false %>
</div>


  <div class="actions">
    <%= form.submit %>
  </div>
</div>

  <% end %>
</div>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "rails.validations.js" %>
<% end %>

  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    
</body>
</html>

